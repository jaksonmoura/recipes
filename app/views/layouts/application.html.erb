<!DOCTYPE html>
<html>
<head>
  <title>Recipes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="nav navbar navbar-default">
	<div class="container">
		<div class="navbar-brand">
			<%= link_to "Recipes", root_path %>
		</div>
		<ul class="nav navbar-nav navbar-right">
			<li><%= link_to "New recipe", new_recipe_path %></li>
			<li><%= link_to "Sign out", new_recipe_path %></li>
		</ul>
	</div>
</header>

<div class="container">
	<div class="content">
		<%= yield %>
	</div>
</div>


</body>
</html>
